<!DOCTYPE HTML>
<html>

<!-- Head -->
<% include ./partials/_head %>

<body>
    <!-- Header -->
    <% include ./partials/_header %>
    <!-- Main -->
    <div>
        <form method="POST" action="/surveys/new">
            <% for (let i = 0; i < data.length; i++) { %>
                <p><%= data[i].qText %></p>
                <div>
                    <% for (let j = 0; j < data[i].answers.length; j++) { %>
                        <input type="radio" id="<%= j %>" name="<%=data[i].id%>" value="<%= data[i].answers[j] %>">
                        <label for="<%= j %>"><%= data[i].answers[j] %></label>
                    <% } %>
                </div>
            <% } %>
            <input type="submit" value="Submit">
        </form>
    </div>
    <!-- Footer -->
    <% include ./partials/_footer %>
</body>

</html>